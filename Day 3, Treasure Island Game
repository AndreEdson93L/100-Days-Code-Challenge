# GAME
left_right = input("You wanna go to the left or to the right? [left][right]: ").lower()
if left_right != "left":
  print("You fallen into a Hole! Ad√¨os Muchacho!")
  
elif left_right == "left":
  swim_wait = input("Do you wanna swim or wait? [swim][wait]: ").lower()
  if swim_wait != "wait":
    print("You have been attacked by a trout! Game over.")
  elif swim_wait == "wait":
    door_color = input("There are multiple doors in front of you, which of these doors you want to open? [red][blue][yellow] \n").lower()
    if door_color == "red":
      print("\n You have been burned by some Aliens! *.*!")
    elif door_color == "blue":
      print("\n You Win. You Find the Dragon!!")
      print("""
      
